<div class="content-wrapper">
    <div class="container-full">
        <!-- Content Header (Page header) -->

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-lg-6 col-12">
                    <div class="box">
                        <!-- /.box-header -->
                        <form class="form">
                            <div class="box-body">
                                <hr class="my-15">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="form-label">Add Expiry Time In Minute</label>
                                            <input type="number" class="form-control" id="AddExpiryTimeinMinute" value="@ViewBag.ExpiryDate">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer pull-right">
                                <button type="button" onclick="window.location.href='/Home/Index'" class="btn btn-warning me-1">
                                     Cancel
                                </button>
                                <button type="button" onclick="SaveRecord()" class="btn btn-primary">
                                    Save
                                </button>
                            </div>
                        </form>
                    </div>
                    <!-- /.box -->
                </div>
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
</div>



<script>
    function SaveRecord() {
        var Time = $("#AddExpiryTimeinMinute").val();
        $.ajax({
                type: "POST",
            url: "/LeadInfo/SaveLeadExpiryTime",
            data: JSON.stringify({ Time }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
            success: function (r) {
                window.location.href = '/Home/Index';
                },
                error: function (x, e) {
                    Swal.fire("", "Saving Error");
                },
                async: false
            });
        }
</script>